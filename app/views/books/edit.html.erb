<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>

      <div class="form-group">
        <label for="inputTitle">Title</label></br>
        <%= f.text_field :title, autofocus: true, id:"inputTitle" %></br>
      </div>

      <div class="form-group">
        <label for="inputBody">Opinion</label></br>
        <%= f.text_area :body, id:"inputBody" %>
      </div>

      <%= f.submit "Update Book", class:"btn btn-success btn-sm" %>
      <% end %>

      <a class="book_show">
        <%= link_to "Show", book_path(@book.id) %>
      </a>
      |
      <a class="back">
        <%= link_to "Back", books_path %>
      </a>


    </div>
  </div>
</div>