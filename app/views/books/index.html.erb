<%= render 'form', books: @books %>

<div class="col md-8 offset-md-1">
<h2>Books</h2>

<table class="table table-hover table-inverse">
  <thead>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
   <th colspan="3"></th>
  </thead>

  <tbody>
   <% @books.each do |book| %>
     <%= image_tag book.user.get_profile_image(100,100) %>
      <span>
        <%= link_to book.title, books_path(book.id) %>
      </span>
   <% end %>
  </tbody>
</table>
</div>